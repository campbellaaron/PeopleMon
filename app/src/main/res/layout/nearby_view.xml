<?xml version="1.0" encoding="utf-8"?>
<com.aaroncampbell.peoplemon.Views.NearbyListView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coordinatorLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:id="@+id/peep_id"
        android:layout_weight="0.30"
        android:layout_width="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coordinatorLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:id="@+id/peep_name"
        android:layout_weight="0.30"
        android:layout_width="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/nearby_recycler"
        android:scrollbars="vertical"/>

</com.aaroncampbell.peoplemon.Views.NearbyListView>