<?xml version="1.0" encoding="utf-8"?>
<com.aaroncampbell.peoplemon.Views.MessageView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#254f53">
    <TextView
        android:text="MESSAGES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#dddddd"
        android:textColorHighlight="#ffffff"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:id="@+id/message_header" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/message_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:background="#eeeeee"/>

    <EditText
        android:id="@+id/input_message"
        android:layout_width="240dp"
        android:background="#ffffff"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/send_message"
        android:layout_width="wrap_content"
        android:text="Send"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/input_message"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/input_message"
        android:layout_alignParentEnd="true" />

</com.aaroncampbell.peoplemon.Views.MessageView>